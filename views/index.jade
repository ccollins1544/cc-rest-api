extends layout

block content
  div.container 
    div.row.first-row
      h4.mx-auto= page_title 
    hr 
    div.row 
      div.col-12.col-md-12.mx-auto 
        p Welcome #{username}
        ul.list-group 
          li.list-group-item.d-flex.justify-content-center.align-items-center.list-group-item-primary 
            span Login: #{login}
          li.list-group-item.d-flex.justify-content-center.align-items-center.list-group-item-secondary
            span  IssuedAt: #{iat}
          li.list-group-item.d-flex.justify-content-center.align-items-center.list-group-item-warning
            span Expires: #{exp}
          - var time_remaining = (exp - iat) / 60 
          li.list-group-item.d-flex.justify-content-center.align-items-center.list-group-item-success
            span Time Remaining: #{time_remaining} minutes

