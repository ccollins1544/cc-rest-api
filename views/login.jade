extends layout

block content
  div.col-lg-12.mx-auto
    div.card.bg-dark
      div.card-header
        h2= page_title
      div.card-body.bg-dark
        if login 
          p.text-white Hi #{username}! Looks like you're already logged in!
          a(href="/")
            button.btn.btn-dark
              if fa_script 
                i.fas.fa-home
              else 
                | Home 
        else 
          form#login-form
            div.form-group.row
              label.col-sm-4.form-label.text-white(for="username") Username: 
              div.col-sm-8.input-group 
                input.form-input#username(type="text", name="username", placeholder="Username", )
            div.form-group.row
              label.col-sm-4.form-label.text-white(for="password") Password: 
              div.col-sm-8.input-group 
                input.form-input#password(type="password", name="password", placeholder="password", )
            div.form-group.row
              span.col-sm-12.input-group-btn.text-right 
                button.btn.btn-dark.form-input(type="submit")
                  if fa_script 
                    i.fas.fa-user
                  |  #{page_title}


            